<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F9FAFB"
    android:padding="40dp"
    tools:context=".Presentation.UI.FeedbackForm">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Faculty Name -->
            <TextView
                android:id="@+id/txtfaculty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#1E3A8A"
                android:background="@drawable/rounded_edittext"
                android:padding="12dp"
                android:layout_marginTop="16dp"
                android:elevation="2dp" />

            <!-- Subject Name -->
            <TextView
                android:id="@+id/txtsubject"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#374151"
                android:background="@drawable/rounded_edittext"
                android:padding="12dp"
                android:layout_marginTop="10dp"
                android:elevation="2dp" />

            <!-- Questions Header -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Feedback Questions"
                android:textColor="#D32F2F"
                android:textStyle="bold"
                android:textSize="22sp"
                android:layout_marginTop="28dp"
                android:layout_marginBottom="12dp" />

            <!-- Question 1 -->
            <TextView
                android:id="@+id/tvQuestion1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Question 1 will appear here"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#111827"
                android:paddingBottom="6dp" />

            <RadioGroup
                android:id="@+id/rgOptions1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="12dp">
                <RadioButton android:id="@+id/rbQ1Option1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Satisfactory"/>
                <RadioButton android:id="@+id/rbQ1Option2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Good"/>
                <RadioButton android:id="@+id/rbQ1Option3" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Very Good"/>
                <RadioButton android:id="@+id/rbQ1Option4" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Excellent"/>
            </RadioGroup>

            <!-- Question 2 -->
            <TextView
                android:id="@+id/tvQuestion2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Question 2 will appear here"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#111827"
                android:paddingBottom="6dp" />

            <RadioGroup
                android:id="@+id/rgOptions2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="12dp">
                <RadioButton android:id="@+id/rbQ2Option1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Satisfactory"/>
                <RadioButton android:id="@+id/rbQ2Option2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Good"/>
                <RadioButton android:id="@+id/rbQ2Option3" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Very Good"/>
                <RadioButton android:id="@+id/rbQ2Option4" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Excellent"/>
            </RadioGroup>

            <!-- Question 3 -->
            <TextView
                android:id="@+id/tvQuestion3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Question 3 will appear here"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#111827"
                android:paddingBottom="6dp" />

            <RadioGroup
                android:id="@+id/rgOptions3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="12dp">
                <RadioButton android:id="@+id/rbQ3Option1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Satisfactory"/>
                <RadioButton android:id="@+id/rbQ3Option2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Good"/>
                <RadioButton android:id="@+id/rbQ3Option3" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Very Good"/>
                <RadioButton android:id="@+id/rbQ3Option4" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Excellent"/>
            </RadioGroup>

            <!-- Question 4 -->
            <TextView
                android:id="@+id/tvQuestion4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Question 4 will appear here"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#111827"
                android:paddingBottom="6dp" />

            <RadioGroup
                android:id="@+id/rgOptions4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="12dp">
                <RadioButton android:id="@+id/rbQ4Option1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Satisfactory"/>
                <RadioButton android:id="@+id/rbQ4Option2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Good"/>
                <RadioButton android:id="@+id/rbQ4Option3" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Very Good"/>
                <RadioButton android:id="@+id/rbQ4Option4" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Excellent"/>
            </RadioGroup>

            <!-- Question 5 -->
            <TextView
                android:id="@+id/tvQuestion5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Question 5 will appear here"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#111827"
                android:paddingBottom="6dp" />

            <RadioGroup
                android:id="@+id/rgOptions5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="12dp">
                <RadioButton android:id="@+id/rbQ5Option1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Satisfactory"/>
                <RadioButton android:id="@+id/rbQ5Option2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Good"/>
                <RadioButton android:id="@+id/rbQ5Option3" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Very Good"/>
                <RadioButton android:id="@+id/rbQ5Option4" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Excellent"/>
            </RadioGroup>

            <!-- Comment box -->
            <EditText
                android:id="@+id/edtcomment"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:hint="Write your comments here..."
                android:gravity="top|start"
                android:background="@drawable/rounded_edittext"
                android:padding="12dp"
                android:layout_marginTop="20dp"
                android:textSize="16sp"
                android:textColor="#111827" />

            <!-- Submit Button -->
            <Button
                android:id="@+id/btnSubmit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Submit Feedback"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:background="@drawable/rounded_button"
                android:padding="14dp"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="16dp"
                android:elevation="6dp"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
